#include <iostream>

using namespace std;

int main(void){
    int emp = 0,cnt = 0,tmp = 0;
    while(cin>>emp){
    	while(emp > 2){
	    	tmp = emp / 3;
			cnt += tmp;
			emp %= 3;
			emp += tmp;	
	    }
	    if(emp == 2){
	    	cnt ++;
	    	}
	    cout<<cnt<<endl;
	    cnt = 0;
    }
    return 0;
}
